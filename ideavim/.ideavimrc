" esc in insert and visual mode
inoremap jk <esc>
inoremap kj <esc>
vnoremap jk <esc>
vnoremap kj <esc>
set timeoutlen=100
" turn on syntax
syntax on
" adjust tab space
set tabstop=4

" Remap enter command
nnoremap ; :

" Remap go to end of line
nmap E $
vmap E $
vmap B ^
nmap B ^

" Remap escape visual mode
vnoremap v <esc>
vnoremap V <esc>

" Remap tab navigation
nnoremap H gT
nnoremap L gt

" Switch panels
nnoremap <C-h> <C-w>h
nnoremap <C-l> <C-w>l

" Move cursor in insert mode
inoremap <C-h> <Left>
inoremap <C-j> <Down>
inoremap <C-k> <Up>
inoremap <C-l> <Right>

" Quick move cursor in normal mode
nnoremap J 5j
nnoremap K 5k
nnoremap L 5l
nnoremap H 5h

" Space to hover
nmap <space> <Action>(ShowHoverInfo)

" Move line up with Alt+k in normal mode
nnoremap <A-k> :m .-2<CR>==

" Move line down with Alt+j in normal mode
nnoremap <A-j> :m .+1<CR>==

" Move selected lines up with Alt+k in visual mode
vnoremap <A-k> :m '<-2<CR>gv=gv

" Move selected lines down with Alt+j in visual mode
vnoremap <A-j> :m '>+1<CR>gv=gv
